# =============================================================================
# AGiXT v1.8.0 - MINIMAL CONFIGURATION
# =============================================================================
# GOAL: Working foundation without complex features
# NO EzLocalAI, NO frontend, NO token size issues
# Just basic AGiXT backend that works
# =============================================================================

AGIXT_VERSION=v1.8.0-minimal
INSTALL_FOLDER_PREFIX=agixt
INSTALL_BASE_PATH=/var/apps
WORKING_DIRECTORY=./WORKSPACE
TZ=UTC

# Basic database (no complex providers)
DATABASE_TYPE=sqlite
DATABASE_NAME=conversations/agixt
LOG_LEVEL=INFO

# Minimal worker setup (no resource issues)
UVICORN_WORKERS=1

# Simple API configuration
AGIXT_API_KEY=agixt-minimal-key-12345
ALLOWED_DOMAINS=*
AGIXT_BRANCH=main

# NO complex model setup (no token bugs)
# NO EzLocalAI integration (no hanging)
# NO frontend (no freezing)

# Basic agent setup
DEFAULT_AGENT=MinimalAgent
AGENT_CONFIG_PATH=./agents
PROMPT_CONFIG_PATH=./prompts

